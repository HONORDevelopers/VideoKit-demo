<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_group"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <SurfaceView
            android:id="@+id/sv_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_video_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="播放视频" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_sdr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="打标记" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_sdr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="取消标记" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="x 1.5倍" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="x 2倍" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:text="x 2.5倍" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:text="如果想要修改提亮倍数，请在播放前先选择以上倍数按钮。"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>